<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item>
        <shape>
            <solid android:color="#4DEDECEC"/> <!-- Semi-transparent black color for shadow -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Main Content -->
    <item android:top="2dp" android:right="3dp" android:bottom="3dp" android:left="2dp">
        <shape>
            <solid android:color="@color/white"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

</layer-list>
